{
    "name": "@nlpssa-app/server",
    "packageManager": "yarn@4.1.1",
    "main": "index.ts",
    "scripts": {
        "install:clean": "rm -rf .yarn/ node_modules/ && yarn install",
        "start:prod": "node dist/index.js",
        "start:dev": "yarn build && nodemon index.ts",
        "build": "webpack",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "yarn lint --fix",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-handlebars": "^7.1.2",
        "nodemon": "^3.0.3"
    },
    "devDependencies": {
        "@nlpssa-app-types/common": "workspaces:*",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21"
    }
}
