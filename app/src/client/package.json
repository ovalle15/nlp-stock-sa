{
    "name": "@nlpssa-app/client",
    "description": "Client-side JS for nlp-stock-sa application",
    "packageManager": "yarn@4.1.1",
    "private": true,
    "scripts": {
        "start": "yarn build:dev --watch",
        "build:dev": "webpack --mode=development",
        "build:prod": "webpack --mode=production --node-env=production",
        "build": "yarn build:prod",
        "watch": "webpack --watch",
        "serve": "webpack serve"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@nlpssa-app-types/common": "workspaces:*",
        "@testing-library/jest-dom": "^5.16.3",
        "@testing-library/react": "^12.1.4",
        "@testing-library/user-event": "^13.5.0",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.14"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
