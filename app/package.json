{
    "name": "nlpssa-frontend",
    "description": "Frontend for nlp-stock-sa application",
    "packageManager": "yarn@4.1.1",
    "version": "0.0.0",
    "engines": {
        "node": "^18.18.0",
        "yarn": "^4.1.0"
    },
    "workspaces": [
        "src/**"
    ],
    "scripts": {
        "build:dev": "webpack --mode=development",
        "build:prod": "webpack --mode=production --node-env=production",
        "build": "yarn build:prod",
        "watch": "webpack --watch",
        "build:ts": "tsc",
        "install:all": "yarn workspaces foreach -A run install",
        "install:client": "yarn workspace @nlpssa-app/client install",
        "install:server": "yarn workspace @nlpssa-app/server install",
        "client": "yarn workspace @nlpssa-app/client start",
        "client:serve": "yarn workspace @nlpssa-app/client serve",
        "server": "yarn workspace @nlpssa-app/server serve",
        "prepare": "yarn workspaces foreach -A run build",
        "serve:dev": "webpack serve --node-env=development",
        "serve:prod": "node --max-http-header-size=81000 dist/server/index.js"
    },
    "devDependencies": {
        "@babel/core": "^7.24.3",
        "@babel/node": "^7.23.9",
        "@babel/plugin-transform-runtime": "^7.24.3",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.24.3",
        "@babel/preset-react": "^7.24.1",
        "@types/babel__core": "^7",
        "@types/babel__preset-env": "^7",
        "@types/eslint": "^8",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.0",
        "@webpack-cli/generators": "^3.0.7",
        "babel-loader": "^9.1.3",
        "copy-webpack-plugin": "^12.0.2",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^28.2.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "html-webpack-plugin": "^5.6.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.1.0",
        "prettier-eslint": "^16.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-assets-manifest": "^5.2.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.2",
        "webpack-node-externals": "^3.0.0",
        "workbox-webpack-plugin": "^7.0.0"
    }
}
